{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Compilar",
      "command": "gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "-Wall",
        "-pg",
        "-no-pie",
        "-w",
        "${workspaceFolder}/main.c",
        "-o",
        "${workspaceFolder}/main.exe",
        "-I${workspaceFolder}/src",
        "-I${workspaceFolder}/tests",
        "${workspaceFolder}/src/*.c",
        "${workspaceFolder}/tests/*.c",
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": {
        "base": "$gcc",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "gcc",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "close": false
      }
    },
    {
      "label": "object_resonant_control",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-w",
        "-c",
        "${workspaceFolder}/src/resonant_control.c",
        "-o",
        "${workspaceFolder}/output/VHIL/resonant_control.o",
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
